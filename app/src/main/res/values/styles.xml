<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ComparisonEditTextStyle">
        <item name="android:maxLength">300</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="ComparisonDifferenceTextViewStyle">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ComparisonTextViewStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
