<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Buttons Style across the whole App-->
    <style name="ButtonStyle">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--EditText Style in TextReportActivity-->
    <style name="EditTextStyle">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:ems">10</item>
    </style>

    <!--EditText Style in ComparisonActivity-->
    <style name="ComparisonEditTextStyle">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">3</item>
    </style>

    <!--Comparison Difference EditText Style in ComparisonActivity-->
    <style name="ComparisonDifferenceEditTextStyle">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:maxLines">3</item>
        <item name="android:editable">false</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <!--Calculation TextView Style in ComparisonActivity-->
    <style name="ComparisonTextViewStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">15sp</item>
    </style>


    <!--Tablet View Styles-->
    <!--EditText Style in TextReportActivity-->
    <style name="TabletEditTextStyle">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">@dimen/size_25_sp</item>
    </style>

    <!--Buttons Style across the whole App-->
    <style name="TabletButtonStyle">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_20_sp</item>
    </style>

    <!--EditText Style in ComparisonActivity-->
    <style name="TabletComparisonEditTextStyle">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">6</item>
        <item name="android:textSize">@dimen/size_25_sp</item>
    </style>

    <!--Comparison Difference EditText Style in ComparisonActivity-->
    <style name="TabletComparisonDifferenceEditTextStyle">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">@dimen/size_25_sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:maxLines">6</item>
        <item name="android:editable">false</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <!--Calculation TextView Style in ComparisonActivity-->
    <style name="TabletComparisonTextViewStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/size_25_sp</item>
    </style>

</resources>
