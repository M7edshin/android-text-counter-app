<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TopEditTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">200</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:hint">@string/str_hint_enter_a_text_here_top</item>
    </style>

    <style name="TopStringCountButtonStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:layout_marginLeft">5sp</item>
    </style>

    <style name="BottomEditTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">200</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:hint">@string/str_hint_enter_a_text_here_bottom</item>
    </style>

    <style name="BottomStringCountButtonStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:layout_marginLeft">5sp</item>
    </style>

    <style name="CompareButtonStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:layout_marginLeft">5sp</item>
    </style>

    <style name="CompareEditTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">200</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:hint">@string/difference_characters_or_words_will_be_displayed_here
        </item>
        <item name="android:enabled">false</item>
    </style>

    <style name="StyleImages">
        <item name="android:padding">5dp</item>
    </style>


</resources>
